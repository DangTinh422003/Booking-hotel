<script>
function copyVoucherId(idvoucher) {
  navigator.clipboard.writeText(idvoucher).then(function() {
    Swal.fire({
      title: 'Sao chép mã thành công',
      text: 'Chúc mừng bạn đã sao chép thành công với mã: '+idvoucher,
      icon: 'success',
      confirmButtonText: 'OK'
    })
  }, function() {
    // Nếu việc sao chép không thành công, hiển thị thông báo tạm thời
    var tempMessage = document.createElement("div");
    tempMessage.innerText = "Không thể sao chép mã voucher. Vui lòng thử lại sau.";
    tempMessage.style.backgroundColor = "yellow";
    tempMessage.style.color = "black";
    tempMessage.style.padding = "10px";
    document.body.appendChild(tempMessage);
    setTimeout(function() {
      document.body.removeChild(tempMessage);
    }, 5000);
  });
}
  // PHÂN TRANG
  var items = $(".question");
  let numItems = items.length
  var perPage =6;
  items.slice(perPage).hide();
  console.log($('#pagination-container'));
  $('#pagination-container').pagination({
    items: numItems,
    itemsOnPage: perPage,
    prevText: "&laquo;",
    nextText: "&raquo;",
    onPageClick: function (pageNumber) {
      var showFrom = perPage * (pageNumber - 1);
      var showTo = showFrom + perPage;
      items.hide().slice(showFrom, showTo).show();
    }
  });
</script>