<link rel="stylesheet" href="/css/danhsachphong.css" />

<div class="danh-sach-phong">
  {{! introduction }}
  <div class="introduction">
    <div class="container">
      <div class="row">
        <div class="col-4">
          <div class="introduction__item">
            <div class="introduction__item-logo"><img
                src="https://www.ivivu.com/du-lich/content/img/icon-support.svg"
                loading="lazy"
                alt="introduction__item-logo"
              />
            </div>
            <div class="introduction__item-info">
              <h3>Tư Vấn Chuyên Nghiệp</h3>
              <p>Hỗ trợ nhiệt tình, chăm sóc chu đáo</p>
            </div>
          </div>
        </div>
        <div class="col-4">
          <div class="introduction__item">
            <div class="introduction__item-logo"><img
                src="https://www.ivivu.com/du-lich/content/img/icon-location.svg"
                loading="lazy"
                alt="introduction__item-logo"
              />
            </div>
            <div class="introduction__item-info">
              <h3>Trải Nghiệm Đa Dạng</h3>
              <p>Chọn tour phù hợp, giá tour hợp lý</p>
            </div>
          </div>
        </div>
        <div class="col-4">
          <div class="introduction__item">
            <div class="introduction__item-logo"><img
                src="https://www.ivivu.com/du-lich/content/img/icon-payment.svg"
                loading="lazy"
                alt="introduction__item-logo"
              />
            </div>
            <div class="introduction__item-info">
              <h3>Thanh Toán An Toàn</h3>
              <p>Linh hoạt, rõ ràng, bảo mật</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {{! content }}
  <div class="content">
    <div class="container">

      <h2 class="roomlist-heading">
        Các phòng hiện có
        <a
          target="_blank"
          href="https://www.google.com/maps/@21.0506866,105.8047464,19z?hl=vi"
          style="text-decoration: none;"
        >
        </a>
      </h2>

      <div class="listroom">
        <div class="row">
          {{! menu }}
          <div class="col-3">
            <div class="support">
              <h4>Cần hỗ trợ ?</h4>
              <ul>
                <li><span>HCM</span> <span>1900 1870</span></li>
                <li><span>HN</span> <span>1900 2045</span></li>
                <li><span>CT</span> <span>1900 2087</span></li>
              </ul>
            </div>

            <div class="filter-feature">
              <div class="group-search">
                <input type="text" placeholder="Nhập tên phòng!" />
                <button><i class="far fa-search"></i></button>
              </div>

              <div class="star-filter">
                <p>Hạng sao</p>
                <form class="star__filter__form" id="star-form" method="GET" action="/danh-sach-phong">
                  <div class="star__filter__form-group">
                    <input type="checkbox" class="star_rating" value="5" />
                    <span>
                      <i class="fas fa-star"></i>
                      <i class="fas fa-star"></i>
                      <i class="fas fa-star"></i>
                      <i class="fas fa-star"></i>
                      <i class="fas fa-star"></i>
                    </span>
                  </div>
                  <div class="star__filter__form-group">
                    <input type="checkbox" class="star_rating" value="4" />
                    <span>
                      <i class="fas fa-star"></i>
                      <i class="fas fa-star"></i>
                      <i class="fas fa-star"></i>
                      <i class="fas fa-star"></i>
                    </span>
                  </div>
                  <div class="star__filter__form-group">
                    <input type="checkbox" class="star_rating" value="3" />
                    <span>
                      <i class="fas fa-star"></i>
                      <i class="fas fa-star"></i>
                      <i class="fas fa-star"></i>
                    </span>
                  </div>
                  <div class="star__filter__form-group">
                    <input type="checkbox" class="star_rating" value="2" />
                    <span>
                      <i class="fas fa-star"></i>
                      <i class="fas fa-star"></i>
                    </span>
                  </div>
                  <div class="star__filter__form-group">
                    <input type="checkbox" class="star_rating" value="1" />
                    <span>
                      <i class="fas fa-star"></i>
                    </span>
                  </div>
                  <div class="mt-3">
                    <button type="submit" class="btn btn-success filterStar">Lọc theo sao</button>
                  </div>
                </form>
              </div>
            </div>
          </div>

          {{! list room }}
          <div class="col-9">
            <div class="row">

              {{#each rooms as |room|}}
                <div class="col-12" style="margin-bottom: 60px!important;">
                  <div class="room-item">
                    <a
                      href="/xem-phong/{{slug}}-{{id5 room.id}}"
                      style="text-decoration: none!important;"
                    >
                      <div class="room-intro">
                        <i class="fal fa-clock"></i>
                        <p>{{room.intro}}</p>
                      </div>
                      <div class="row">
                        <div class="col-4" style="padding-right: 0;">
                          <div class="room-thumbnail">
                            <img src="{{room.img_room}}" alt="" />
                          </div>
                        </div>
                        <div class="col-5" style="padding: 0;">
                          <div class="room-detail">
                            <h4 class="room-detail-name">{{room.name_room}}</h4>
                            <div class="room-detail-rating">
                              <span class="star-rating">
                                {{{loopStar room.star}}}
                              </span>
                              <span class="point-rating">{{room.point}}</span>
                              <span
                                class="message-rating"
                              >{{room.feedback_normal}}</span>
                              <span class="numbers-rating">{{room.count_cmt}}
                                đánh giá</span>
                            </div>
                            <div class="room-address">
                              <i class="fas fa-map-marker-alt"></i>
                              <span>Ven Biển, xã Phước Thuận</span>
                            </div>

                            {{#each characters as |character|}}
                              <div class="room-supertag">
                                <i class="fas fa-check"></i>
                                {{character}}
                              </div>
                            {{/each}}

                            <div class="room-pill-container">
                              <div class="room-pill-container-icon">
                                <i class="fas fa-star"></i>
                              </div>
                              <p
                                class="room-pill-container-content"
                              >{{room.voucher}}</p>
                            </div>
                          </div>
                        </div>
                        <div class="col-3">
                          <div class="room-state">
                            <p class="room-status">{{room.status}}</p>
                            <p class="room-state-oldprice">{{formatPrice room.oldprice}}
                              VDN</p>
                            <p class="room-state-newprice">{{formatPrice room.newprice}}
                              VDN</p>
                            <div class="bonus">
                              <div class="type_room">{{room.type_room}}</div>
                              <div
                                class="type_room-bonus"
                              >{{room.type_room_bonus}}</div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </a>
                  </div>
                </div>
              {{/each}}

            </div>
          </div>

          
        </div>
      </div>

    </div>
  </div>

</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>